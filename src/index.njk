<!--BESTSELLER-->
<section class="products-gallery padding-y-lg bg-primary">
  <div class="container max-width-adaptive-lg">
    <div class="margin-bottom-xl padding-top-xl">
      <div class="flex flex-center">
        <h1 class="color-white">Best Sellers</h1>
      </div>
    </div>

    <div class="grid gap-md">
    {% for product in collections.bestseller %}

      <div class="prod-card col-4@md">
        <span class="prod-card__badge" role="text">Best Seller <i class="sr-only">product</i></span>
        <a href="{{ product.data.url }}" class="prod-card__img-link" aria-label="Description of the link">
          <figure class="prod-card__img">
           <img class="radius-lg" src="{{ product.data.image }}" alt="{{product.data.description}}">
          </figure>
        </a>
        <div class="prod-card__content text-center">
          <h3 class="color-white"><a href="#0">{{ product.data.title }}</a></h3>
          <div class="margin-top-xs">
            {% if product.data.sale %}
            <del class="prod-card__price prod-card__price--old color-white">{{ product.data.price }}</del> 
            <ins class="prod-card__price prod-card__price--new color-white">{{ product.data.saleprice }}</ins>
            {% else %}
            <ins class="prod-card__price prod-card__price--new color-white">{{ product.data.price }}</ins>
            {% endif %}
          </div>
        </div>
      </div>

      {% endfor %}
    </div>
  </div>
</section>
