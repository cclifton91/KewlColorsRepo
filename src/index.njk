---
layout: layouts/default.njk 
---
<main class="width-100vw height-100vh bg-cover bg-no-repeat">
    <div class="container max-width-sm padding-y-lg flex flex-col flex-center">
        <div class="container max-width-xxl ">
            <div class="text-component margin-bottom-md text-center color-primary">
                <h2 class="color-primary">Kewl Colors Coming Soon!</h2>
                <p>Get notified of the launch.</p>
            </div>

            <form class="grid gap-xxs" name="coming soon email" method="post" data-netlify="true">
                <div class="col@xs min-width-0">
                    <input class="form-control width-100% height-100%" name="email" id="email" aria-label="email" type="email" placeholder="email address">
                </div>

                <div class="col-content@xs">
                    <button class="btn btn--primary width-100% height-100%" type="submit">Notify Me</button>
                </div>

            </form>

            <div class="margin-top-xs">
                <img src="./assets/images/coming-soon-t.webp" alt="mac computer with kewl color logo showing on screen">
            </div>
        </div>
    </div>
</main>